{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/html/index.html"
      },
      {
        "source": "/host",
        "destination": "/html/host.html"
      },
      {
        "source": "/game_room",
        "destination": "/html/game_room.html"
      },
      {
        "source": "/host_lobby",
        "destination": "/html/host_lobby.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
