{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/html/index.html"
      },
      {
        "source": "/host",
        "destination": "/html/host.html"
      },
      {
        "source": "/debug",
        "destination": "/html/debug.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
